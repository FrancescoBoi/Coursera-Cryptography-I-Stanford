CC = g++
CFLAGS = -std=c++11 -I . -g3 -O2 -Wall -Wextra
mkdir obj

Crypto.o: CryptographyCoursera.o Assignments.o CryptoAlgos.o utility.o
	$(CC) $(CFLAGS) obj/CryptographyCoursera.o obj/Assignments.o obj/CryptoAlgos.o obj/utility.o -o Crypto.o -lcryptopp -lgmp -lgmpxx

CryptographyCoursera.o: CryptographyCoursera.cpp Assignments.h
	$(CC) $(CFLAGS) CryptographyCoursera.cpp -c -o obj/CryptographyCoursera.o 


Assignments.o: Assignments.cpp CryptoAlgos.h utility.h
	$(CC) $(CFLAGS) Assignments.cpp -c -o obj/Assignments.o  

CryptoAlgos.o: CryptoAlgos.cpp utility.h
	$(CC) $(CFLAGS) CryptoAlgos.cpp -c -o obj/CryptoAlgos.o

utility.o: utility.cpp
	$(CC) $(CFLAGS) -o obj/utility.o -c utility.cpp
